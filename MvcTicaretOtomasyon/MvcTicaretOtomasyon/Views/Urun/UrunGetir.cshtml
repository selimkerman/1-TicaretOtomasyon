@model  MvcTicaretOtomasyon.Models.Siniflar.Urun
@{
    ViewBag.Title = "UrunGetir";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Urun Guncelleme</h2>
<br />

@using (Html.BeginForm("UrunGuncelle", "Urun", FormMethod.Post))
{

    @Html.LabelFor(x => x.Urunid)
    @Html.TextBoxFor(x => x.Urunid)
    <br />

    @Html.LabelFor(x => x.UrunAd)
    @Html.TextBoxFor(x => x.UrunAd)
    <br />

    @Html.LabelFor(x => x.Marka)
    @Html.TextBoxFor(x => x.Marka)
    <br />

    @Html.LabelFor(x => x.Stok)
    @Html.TextBoxFor(x => x.Stok)
    <br />

    @Html.LabelFor(x => x.AlisFiyat)
    @Html.TextBoxFor(x => x.AlisFiyat)
    <br />

    @Html.LabelFor(x => x.SatisFiyat)
    @Html.TextBoxFor(x => x.SatisFiyat)
    <br />

    @Html.LabelFor(x => x.Durum)
    @Html.TextBoxFor(x => x.Durum)
    <br />

    @Html.LabelFor(x => x.UrunGorsel)
    @Html.TextBoxFor(x => x.UrunGorsel)
    <br />

    @Html.LabelFor(x => x.Kategori.Kategoriid)
    @Html.DropDownListFor(x => x.Kategoriid, (List<SelectListItem>)ViewBag.dgr1)

    <br />

    <button class="btn btn-success">Guncelle</button>


}



