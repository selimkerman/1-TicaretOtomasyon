    <br />

    @Html.LabelFor(x => x.UrunAd)
    @Html.TextBoxFor(x => x.UrunAd)
    <br />

    @Html.LabelFor(x => x.Marka)
    @Html.TextBoxFor(x => x.Marka)
    <br />

    @Html.LabelFor(x => x.Stok)
    @Html.TextBoxFor(x => x.Stok)
    <br />

    @Html.LabelFor(x => x.AlisFiyat)
    @Html.TextBoxFor(x => x.AlisFiyat)
