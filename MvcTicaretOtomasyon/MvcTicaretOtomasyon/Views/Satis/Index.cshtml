@using MvcTicaretOtomasyon.Models.Siniflar
@model List<SatisHareket>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>
<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th>ID</th>
            <th>Ürün </th>
            <th> Cari</th>
            <th>Personel</th>
            <th>Adet</th>
            <th>Fiyat</th>
            <th>Toplam Tutar</th>
            <th>Tarih </th>
            <th>Güncelle </th>
            <th>Detay </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Satisid </td>
                <td>@item.Uruns.UrunAd </td>
                <td>@item.Carilers.CariAd </td>
                <td>@item.Personels.PersonelAd @item.Personels.PersonelSoyad </td>
                <td>@item.Adet </td>
                <td>@item.Fiyat </td>
                <td>@item.ToplamTutar </td>
                <td>@item.Tarih </td>

                <td> <a href="/Satis/SatisGetir/@item.Satisid" class="btn btn-primary" />güncelle </td>
                <td> <a href="/Satis/SatisDetay/@item.Satisid" class="btn btn-default" style="background-color:aquamarine" /> Satislar </td>

            </tr>
        }

    </tbody>


</table>

<a href="/Satis/YeniSatis" class="btn btn-primary"> Yeni Satis Yap</a>


<link href="~/Content/bootstrap.css" rel="stylesheet" />

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>




<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>

<script>
    $('#tbl1').dataTable({});
</script>


