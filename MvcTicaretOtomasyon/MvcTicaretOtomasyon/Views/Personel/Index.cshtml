@using MvcTicaretOtomasyon.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Index</h2>

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Adi</th>
        <th> Soyadi</th>
        <th>Gorsel</th>
        <th>Departman</th>     
        <th>Guncelle</th>
        <th>Satislar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Personelid </td>
            <td>@item.PersonelAd </td>
            <td>@item.PersonelSoyad </td>

            <td>
                <img  src="@item.PersonelGorsel"  style="height:80px; width=80px;"/>
            </td>

            <td>@item.Departman.DepartmanAd </td>
            
            <td> <a href="/Personel/PersonelGetir/@item.Personelid" class="btn btn-primary" />güncelle </td>
            <td> <a href="/Departman/DepartmanSatislar/@item.Personelid" class="btn btn-default" style="background-color:aquamarine" /> Satislar </td>

        </tr>


    }

</table>

<a href="/Personel/PersonelEkle" class="btn btn-primary"> Personel Ekle</a>


